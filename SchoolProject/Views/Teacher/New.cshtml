
@{
    ViewBag.Title = "New";
}


<div id="containershow">
    <nav>
        <a class="navbar-link" href="/Teacher/List"> Back to Teachers</a>
    </nav>
    <h2>New Teacher</h2>

    <form method="POST" action="/Teacher/Create" onsubmit="return ValidateTeacher();">
        <div class="inputrow">
            <label for="TeacherFname">First Name</label>
            <input type="text" id="TeacherFname" name="TeacherFname" />
        </div>

        <div class="inputrow">
            <label for="TeacherLname">Last Name</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />

        </div>
        <div class="inputrow">
                <input type="submit" value="Create Teacher" />

         </div>
        
        <div id="ErrorBox" style="display:none;"></div>

    </form>



</div>
